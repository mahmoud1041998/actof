<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import org.controlsfx.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane prefHeight="480.0" prefWidth="1013.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.objectof.actof.repospy.controllers.navigator.NavigatorController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox styleClass="tool-bar">
               <children>
                  <Button fx:id="connect" mnemonicParsing="false" onAction="#doConnect" text="Connect">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/connect.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Connect to an ObjectOf repository" />
                     </tooltip>
                  </Button>
                  <Button fx:id="revert" disable="true" mnemonicParsing="false" onAction="#doRevert">
                     <graphic>
                        <ImageView fx:id="revert_image" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/refresh.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip fx:id="revert_tooltip" text="Revert all changes" />
                     </tooltip>
                  </Button>
                  <Button fx:id="review" disable="true" mnemonicParsing="false" onAction="#doReview">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/review.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Review changes" />
                     </tooltip>
                  </Button>
                  <Button fx:id="commit" disable="true" mnemonicParsing="false" onAction="#doCommit" text="Commit">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/commit.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Commit all changes to the repo" />
                     </tooltip>
                  </Button>
                  <Separator prefWidth="24.0" visible="false" />
                  <Button fx:id="dump" disable="true" mnemonicParsing="false" onAction="#onDump">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/dump.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Dump repo to json file" />
                     </tooltip>
                  </Button>
                  <Button fx:id="load" disable="true" mnemonicParsing="false" onAction="#onLoad">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/import.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Import repo from json file" />
                     </tooltip>
                  </Button>
                  <Separator prefWidth="100.0" visible="false" HBox.hgrow="ALWAYS" />
                  <ChoiceBox fx:id="queryEntity" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" />
                  <TextField fx:id="querytext" prefWidth="300.0" promptText="Enter Query" />
               </children>
               <padding>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <left>
      <VBox prefWidth="250.0" BorderPane.alignment="CENTER">
         <children>
            <TreeView fx:id="records" prefHeight="200.0" prefWidth="200.0" styleClass="entities" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT" spacing="3.0" VBox.vgrow="NEVER">
               <children>
                  <Button fx:id="addEntity" disable="true" mnemonicParsing="false" onAction="#doAddEntity" HBox.hgrow="NEVER">
                     <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/add.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Create new entity" />
                     </tooltip>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </left>
   <center>
      <VBox fx:id="centerbox" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TreeTableView fx:id="table" editable="true" showRoot="false" styleClass="values" VBox.vgrow="ALWAYS">
              <columns>
                <TreeTableColumn fx:id="field" editable="false" maxWidth="1000.0" minWidth="200.0" prefWidth="200.0" text="Field" />
                <TreeTableColumn fx:id="value" minWidth="200.0" prefWidth="400.0" text="Value" />
                  <TreeTableColumn fx:id="stereotype" editable="false" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Stereotype" />
              </columns>
               <columnResizePolicy>
                  <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TreeTableView>
         </children>
      </VBox>
   </center>
</BorderPane>
