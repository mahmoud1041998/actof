<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import org.controlsfx.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane prefHeight="480.0" prefWidth="1013.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.objectof.actof.schemaspy.controller.schemaview.SchemaViewController">
   <left>
      <VBox prefWidth="250.0" BorderPane.alignment="CENTER">
         <children>
            <Accordion style="-fx-border-width: 0;">
              <panes>
                <TitledPane fx:id="namespacepane" animated="false" style="-fx-alignment: center;" text="Namespace" textAlignment="CENTER">
                     <content>
                        <GridPane hgap="4.0" vgap="4.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <TextField fx:id="pkgdomain" promptText="example.com" GridPane.columnIndex="1" />
                              <TextField fx:id="pkgversion" promptText="1400" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <TextField fx:id="pkgpath" promptText="/model" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Label text="Domain" />
                              <Label text="Version" GridPane.rowIndex="1" />
                              <Label text="Path" GridPane.rowIndex="2" />
                           </children>
                        </GridPane>
                     </content>
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                </TitledPane>
              </panes>
            </Accordion>
            <BorderPane>
               <center>
                  <TreeTableView fx:id="tree" editable="true" prefWidth="200.0" styleClass="schema" BorderPane.alignment="CENTER">
                    <columns>
                      <TreeTableColumn fx:id="field" prefWidth="231.0" text="Entities" />
                    </columns>
                     <columnResizePolicy>
                        <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TreeTableView>
               </center>
            </BorderPane>
            <HBox alignment="TOP_RIGHT" spacing="3.0">
               <children>
                  <Button fx:id="addentity" mnemonicParsing="false" onAction="#onAddEntity">
                     <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/add.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                <Button fx:id="removeentity" mnemonicParsing="false" onAction="#onRemoveEntity">
                     <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/remove.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </left>
   <center>
      <ScrollPane fx:id="cardscroller" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <content>
          <AnchorPane fx:id="cardanchor">
               <children>
                  <VBox fx:id="cardpane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <padding>
                        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                     </padding>
                  </VBox>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
   </center>
   <top>
      <HBox styleClass="tool-bar" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="newschema" mnemonicParsing="false" onAction="#onNewSchema">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/document-new.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Create New Schema" />
               </tooltip>
            </Button>
          <Button fx:id="open" mnemonicParsing="false" onAction="#onOpen">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/document-open.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Open Schema" />
               </tooltip>
            </Button>
            <Button fx:id="save" mnemonicParsing="false" onAction="#onSave">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/document-save.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Save Schema" />
               </tooltip>
            </Button>
            <Separator visible="false" HBox.hgrow="ALWAYS" />
            <Button fx:id="create" mnemonicParsing="false" onAction="#onCreate" text="Create Repo">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/createrepo.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="generate" mnemonicParsing="false" onAction="#onGenerate" text="Build Jar">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/package.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </top>
</BorderPane>
