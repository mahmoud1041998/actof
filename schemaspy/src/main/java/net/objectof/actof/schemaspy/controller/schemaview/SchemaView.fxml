<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import org.controlsfx.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane prefHeight="480.0" prefWidth="1013.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.objectof.actof.schemaspy.controller.schemaview.SchemaViewController">
   <center>
      <BorderPane fx:id="editor" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <center>
            <ScrollPane fx:id="cardscroller" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <content>
                <AnchorPane fx:id="cardanchor">
                     <children>
                        <VBox fx:id="cardpane" spacing="12.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <padding>
                              <Insets bottom="12.0" left="8.0" right="8.0" top="12.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
         </center>
      </BorderPane>
   </center>
   <left>
      <VBox prefWidth="250.0" BorderPane.alignment="CENTER">
         <children>
            <Accordion style="-fx-border-width: 0;">
              <panes>
                <TitledPane fx:id="namespacepane" animated="false" style="-fx-alignment: center;" text="Namespace" textAlignment="CENTER">
                     <content>
                        <GridPane hgap="4.0" vgap="4.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <TextField fx:id="pkgdomain" promptText="example.com" GridPane.columnIndex="1" />
                              <TextField fx:id="pkgversion" promptText="1400" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <TextField fx:id="pkgpath" promptText="/model" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Label text="Domain" />
                              <Label text="Version" GridPane.rowIndex="1" />
                              <Label text="Path" GridPane.rowIndex="2" />
                           </children>
                        </GridPane>
                     </content>
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                </TitledPane>
              </panes>
            </Accordion>
            <TreeTableView fx:id="tree" editable="true" prefWidth="200.0" styleClass="schema" VBox.vgrow="ALWAYS">
              <columns>
                <TreeTableColumn fx:id="field" prefWidth="231.0" text="Entities" />
              </columns>
               <columnResizePolicy>
                  <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TreeTableView>
         </children>
      </VBox>
   </left>
   <top>
      <HBox styleClass="tool-bar" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="newschema" mnemonicParsing="false" onAction="#onNewSchema" styleClass="tool-bar-button">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/document-new.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Create New Schema" />
               </tooltip>
            </Button>
          <Button fx:id="open" mnemonicParsing="false" onAction="#onOpen" styleClass="tool-bar-button">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/document-open.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Open Schema" />
               </tooltip>
            </Button>
            <Button fx:id="save" mnemonicParsing="false" onAction="#onSave" styleClass="tool-bar-button">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/document-save.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Save Schema" />
               </tooltip>
            </Button>
            <HBox fx:id="breadcrumbBox" />
            <Separator visible="false" HBox.hgrow="ALWAYS" />
            <Button fx:id="create" mnemonicParsing="false" onAction="#onCreate" styleClass="tool-bar-button" text="Create Repo">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/createrepo.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="generate" mnemonicParsing="false" onAction="#onGenerate" styleClass="tool-bar-button" text="Build Jar">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/package.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </top>
</BorderPane>
